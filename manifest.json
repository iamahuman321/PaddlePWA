{
  "name": "Padel Tournament Manager",
  "short_name": "PadelTM",
  "id": "padel-tournament-manager-v1",
  "description": "The ultimate padel tennis tournament organizer. Create tournaments, track scores, manage players, and share results instantly. Perfect for clubs, coaches, and padel enthusiasts.",
  "start_url": "/",
  "scope": "/",
  "display": "standalone",
  "display_override": ["window-controls-overlay", "standalone"],
  "orientation": "portrait-primary",
  "background_color": "#6A26CD",
  "theme_color": "#6A26CD",
  "lang": "en-US",
  "dir": "ltr",
  "categories": ["sports", "productivity", "utilities", "games"],
  "iarc_rating_id": "e84b072d-71b3-4d3e-86ae-31a8ce4e53b7",
  "prefer_related_applications": false,
  "related_applications": [
    {
      "platform": "webapp",
      "url": "https://v0-paddlemain2.vercel.app/manifest.json",
      "id": "padel-tournament-manager-v1"
    }
  ],
  "edge_side_panel": {
    "preferred_width": 400
  },
  "protocol_handlers": [
    {
      "protocol": "web+padel",
      "url": "/?tournament=%s"
    }
  ],
  "file_handlers": [
    {
      "action": "/",
      "accept": {
        "application/json": [".json"],
        "text/csv": [".csv"]
      }
    }
  ],
  "share_target": {
    "action": "/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "tournament_data",
          "accept": ["application/json", "text/csv"]
        }
      ]
    }
  },
  "handle_links": "preferred",
  "launch_handler": {
    "client_mode": "navigate-existing"
  },
  "scope_extensions": [
    {
      "origin": "https://v0-paddlemain2.vercel.app"
    }
  ],
  "icons": [
    {
      "src": "/icon-512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any"
